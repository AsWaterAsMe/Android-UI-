<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yuqizhang.mywechata.login_Activity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/editText"
        android:hint="账号/手机号"
        android:textColorHint="@android:color/darker_gray"
        android:background="#ffffff"
        android:layout_above="@+id/editText1"
        android:layout_alignParentStart="true"
        android:paddingLeft="15dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/editText1"
        android:hint="密码"
        android:textColorHint="@android:color/darker_gray"
        android:background="#ffffff"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/bn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp"
        android:paddingLeft="15dp"
        android:password="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="登  录"
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:id="@+id/bn"
        android:background="@drawable/login_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="denglu"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户注册"
        android:textColor="@android:color/holo_blue_dark"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/button_yhzc"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="zhuce"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:textColor="@android:color/holo_blue_dark"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/button_zhmm"
        android:layout_alignBottom="@+id/button_yhzc"
        android:layout_alignParentEnd="true"
        android:onClick="zhaohui"/>

</RelativeLayout>
