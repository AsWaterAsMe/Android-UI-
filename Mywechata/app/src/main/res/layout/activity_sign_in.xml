<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yuqizhang.mywechata.sign_in_Activity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下 一 步"
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/login_button"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_margin="10dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我已阅读并同意"
        android:id="@+id/checkBox_read"
        android:layout_above="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用条款和隐私政策"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/checkBox_read"
        android:layout_alignEnd="@+id/button"
        android:layout_toEndOf="@+id/checkBox_read"
        android:onClick="shiyongtiaokuan"
        android:textColor="@android:color/holo_red_light"
        android:layout_alignTop="@+id/checkBox_read"
        android:gravity="left|center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号"
        android:id="@+id/button2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="20sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学校"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_alignEnd="@+id/button2"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="20sp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_toEndOf="@+id/button2"
        android:id="@+id/editText3"
        android:hint="请输入您的手机号"
        android:textColorHint="@android:color/darker_gray"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignEnd="@+id/editText3"
        android:layout_toEndOf="@+id/button3"
        android:hint="请输入您所在的大学"
        android:textColorHint="@android:color/darker_gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="学籍号"
        android:id="@+id/textView3"
        android:layout_alignEnd="@+id/button3"
        android:gravity="center"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignEnd="@+id/button"
        android:layout_toEndOf="@+id/textView3"
        android:hint="请输入您的学籍号"
        android:textColorHint="@android:color/darker_gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="证件号"
        android:id="@+id/textView4"
        android:gravity="center"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/editText4"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText5"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignEnd="@+id/button"
        android:layout_toEndOf="@+id/textView4"
        android:hint="请输入您的身份证号"
        android:textColorHint="@android:color/darker_gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="姓名"
        android:id="@+id/textView5"
        android:gravity="center"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/editText5"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText6"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignEnd="@+id/editText5"
        android:layout_toEndOf="@+id/textView5"
        android:hint="请输入您的姓名"
        android:textColorHint="@android:color/darker_gray"/>




</RelativeLayout>
